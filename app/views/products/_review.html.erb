<h2>Reviews</h2>
<% @reviews.each do |review| %>
  <tr>
    <td>
      <%= review.user.first_name %> <%= review.user.last_name %>
    </td>
    <td>
      <%= review.description %>
    </td>
    <td>
      <%= review.rating %>
    </td>
    <td>
      <%= review.created_at.strftime('%F') %>
      <% if current_user && current_user.email == review.user.email %>
        <%= link_to fa_icon('trash'), product_review_path(@product.id, review.id), class: 'btn btn-sm btn-danger', method: :delete, data: { confirm: "Are you sure?" } %>
      <% end %>
    </td>
  </tr>
<% end %>