<section class="admin-session-new">

  <header class="page-header">
    <h1>Login</h1>
  </header>

  <div class="row">
    <div class="col-sm-6 col-sm-offset-1">
      <%= form_tag [:login] do %>
        <div class="form-group">
          <label for="email">Email:</label>
          <input type="email" class="form-control" id="email" <%= text_field_tag :email %>
        </div>
        <div class="form-group">
          <label for="email">Password:</label>
          <input type="password" class="form-control" id="password" <%= password_field_tag :password %>
        </div>
          <button type="submit" class="btn btn-primary" <%= submit_tag "Submit" %>Login</button>
      <% end %>
    </div>
  </div>

</section>